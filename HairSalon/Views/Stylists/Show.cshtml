@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<body>


<h3>Here are all of the clients for this stylist:</h3>

@if (Model.Count == 0)
{
  <h3>You have no clients!</h3>
}
@if (Model.Count !=0)
{
@foreach (Client client in @Model["client"])
{
    <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetClientName()</a></li>
}
}

<h3><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></h3>
<form action="/stylists/@Model["stylist"].GetId()/delete" method="post">
  <button type="submit" name="button">Delete the stylist</button>
</form>
<form action="/stylists/@Model["stylist"].GetId()/edit" method="post">
  <button type="submit" name="button">Edit the stylist</button>
</form>
<h3><a href='/stylists'>Return to stylist list.</a></h3>
<h3><a href='/'>Return to Main page</a></h3>
</body>
