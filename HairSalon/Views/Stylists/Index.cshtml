@using HairSalon.Models
@{
  Layout = "_Layout";
}
<body>
<h1>To Do List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>No styliests have been added yet</p>
}
@if(Model.Count != 0)
{
  @foreach (Stylist stylist in Model)
  {
    <li><a href='/styliests/@stylist.GetId()'>@stylist.GetStylistName()</a></li>

    <!-- <button class="btn btn-sm" ><a href='/styliests/@stylist.GetId()/edit'>Edit</a></button> -->
  }
}

</ul>
<p><a href='/'>Back home</a></p>
<p><a href="/styliests/new">Add a new stylist.</a></p>
