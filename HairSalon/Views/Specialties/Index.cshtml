@using HairSalon.Models;
@{
  Layout = "_Layout";
}
<body>
<h1>Like An Angel Hair Salon Specialties</h1>
<ul>

@if (Model.Count == 0)
{
  <p>No specialties have been added yet</p>
}
@if(Model.Count != 0)
{
  @foreach (Specialty specialty in Model)
  {
    <li><a href='/specialties/@specialty.GetId()'>@specialty.GetDescription()</a></li>

    <button class="btn btn-sm" ><a href='/specialties/@specialty.GetId()/edit'>Edit</a></button>
  }
}

</ul>
<p><a href='/'>Back home</a></p>
<p><a href="/specialties/new">Add a new specialty.</a></p>
 <form action="/specialties/delete" method="post">
  <button type="submit" name="button">Delete all specialties</button>
</form>
</body>
